package week1.day1.assignments;

public class PalindromeNum {

	public static void main(String[] args) {
	  int palindrome=454;
	  int k=454; 
	  int i=0;
	while(palindrome != 0) {
		    
	      // get last digit from palindrome
	      int digit = palindrome % 10;
	      i = i * 10 + digit;

	      // remove the last digit from num
	      palindrome /= 10;
	    }
	  if(k==i)
	  {
		  System.out.println("This is palindrome number: " + i);
	  }
	  else
		  System.out.println("This is not a palindrome number: " + i);
	}
}
